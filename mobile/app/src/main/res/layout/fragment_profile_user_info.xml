<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardElevation="1dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/profile_user_title"
            android:textSize="25sp"
            android:fontFamily="@font/avenir_lt_std_55_roman"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_user_first_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:text="@string/profile_user_first_name"
            android:textSize="20sp"
            android:fontFamily="@font/gothic_a1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_user_title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_user_first_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:fontFamily="@font/gothic_a1"
            app:layout_constraintStart_toEndOf="@id/profile_user_first_name_text_view"
            app:layout_constraintTop_toTopOf="@id/profile_user_first_name_text_view"
            tools:text="Aurelien" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_user_last_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/profile_user_last_name"
            android:textSize="20sp"
            android:fontFamily="@font/gothic_a1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_user_first_name_text_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_user_last_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/profile_user_last_name_text_view"
            app:layout_constraintTop_toTopOf="@id/profile_user_last_name_text_view"
            tools:text="Frantz" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_user_email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/profile_user_email"
            android:textSize="20sp"
            android:fontFamily="@font/gothic_a1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_user_last_name_text_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_user_email_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/profile_user_email_text_view"
            app:layout_constraintTop_toTopOf="@id/profile_user_email_text_view"
            tools:text="maxwell.frantz@epitech.eu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>